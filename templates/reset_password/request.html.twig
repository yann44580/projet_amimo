{% extends 'base1.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class=" login">
    <div class="login_user">
        <div class="logo_login">
            <img src="{{asset("uploads/Logo-AMIMO-62285fcb0ff53.jpg")}}" alt="">
        </div>
        <div class="form">
            {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1>Renouveler mon mot de passe</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Indiquez votre Email et nous vous enverrons un lien pour r√©initialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary">Envoyer le lien</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}