{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
    <h1>Blogs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Blog_title</th>
                <td>{{ blog.blogTitle }}</td>
            </tr>
            <tr>
                <th>Blog_subtitle</th>
                <td>{{ blog.blogSubtitle }}</td>
            </tr>
            <tr>
                <th>Blog_content</th>
                <td>{{ blog.blogContent }}</td>
            </tr>
            <tr>
                <th>Blog_author</th>
                <td>{{ blog.blogAuthor }}</td>
            </tr>
            <tr>
                <th>Blog_publication_date</th>
                <td>{{ blog.blogPublicationDate ? blog.blogPublicationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_blogs_index') }}">back to list</a>

    <a href="{{ path('admin_blogs_edit', {'id': blog.id}) }}">edit</a>

    {{ include('admin/blogs/_delete_form.html.twig') }}
{% endblock %}
