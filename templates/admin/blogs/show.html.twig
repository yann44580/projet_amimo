{% extends 'admin.html.twig' %}

{% block title %}Aricles
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Articles</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ blog.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ blog.blogTitle }}</td>
				</tr>
				<tr>
					<th>Sous-titre</th>
					<td>{{ blog.blogSubtitle }}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ blog.blogContent }}</td>
				</tr>
				<tr>
					<th>Auteur</th>
					<td>{{ blog.blogAuthor }}</td>
				</tr>
				<tr>
					<th>Date de publication</th>
					<td>{{ blog.blogPublicationDate ? blog.blogPublicationDate|date('Y-m-d') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_blogs_index') }}">Revenir Ã  la liste</a>

		<a href="{{ path('admin_blogs_edit', {'id': blog.id}) }}">Modifier</a>

		{{ include('admin/blogs/_delete_form.html.twig') }}
	</div>
{% endblock %}
