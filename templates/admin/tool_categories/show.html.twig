{% extends 'admin.html.twig' %}

{% block title %}Les catégories d'outils
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Les catégories d'outils</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ tool_category.id }}</td>
				</tr>
				<tr>
					<th>Nom de la catégorie</th>
					<td>{{ tool_category.toolCategoryName }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_tool_categories_index') }}">Revenir à la liste</a>

		<a href="{{ path('admin_tool_categories_edit', {'id': tool_category.id}) }}">Modifier</a>

		{{ include('admin/tool_categories/_delete_form.html.twig') }}
	</div>
{% endblock %}
