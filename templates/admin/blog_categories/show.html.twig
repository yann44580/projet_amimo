{% extends 'admin.html.twig' %}

{% block title %}Les catégories de blog
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Les catégories de blog</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ blog_category.id }}</td>
				</tr>
				<tr>
					<th>Nom de la catégorie</th>
					<td>{{ blog_category.blogCategoryName }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_blog_categories_index') }}">Revenir à la liste</a>

		<a href="{{ path('admin_blog_categories_edit', {'id': blog_category.id}) }}">Modifier</a>

		{{ include('admin/blog_categories/_delete_form.html.twig') }}
	</div>
{% endblock %}
