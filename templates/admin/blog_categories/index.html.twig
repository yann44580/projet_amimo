{% extends 'admin.html.twig' %}

{% block title %}Les catégories du blog
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Les catégories du blog</h1>
		<a href="{{ path('admin_blog_categories_new') }}">Créer une nouvelle catégorie</a>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom de la catégorie</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for blog_category in blog_categories %}
					<tr>
						<td>{{ blog_category.id }}</td>
						<td>{{ blog_category.blogCategoryName }}</td>
						<td>
							<a href="{{ path('admin_blog_categories_show', {'id': blog_category.id}) }}">Voir</a>
							<a href="{{ path('admin_blog_categories_edit', {'id': blog_category.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
