{% extends 'admin.html.twig' %}

{% block title %}Partenaires
{% endblock %}

{% block body %}
<div class="administration">
	<div class="container">
		<h1>Adhérent</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Nom</th>
					<td>{{ partner.partnerName }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ partner.partnerAddress }}</td>
				</tr>
				<tr>
					<th>ville</th>
					<td>{{ partner.partnerCity }}</td>
				</tr>
				<tr>
					<th>Mail</th>
					<td>{{ partner.partnerMail }}</td>
				</tr>
				<tr>
					<th>Téléphone</th>
					<td>{{ partner.partnerPhone }}</td>
				</tr>
				<tr>
					<th>présentation</th>
					<td>{{ partner.partnerContent|raw }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td><img src="{{ asset('/uploads/partners/'~partner.partnerPicture) }}" alt="" width="150"></td>
				</tr>
				<tr>
					<th>Site web</th>
					<td>{{ partner.partnerWebLink }}</td>
				</tr>
				<tr>
					<th>Référent</th>
					<td>{{ partner.partnerReferent }}</td>
				</tr>
			</tbody>
		</table>
		<div class="confirm_select">
		<a href="{{ path('admin_partners_index') }}"><p>Retour à la liste</p><button class="btn blue-grey return"><img src="{{ asset('/uploads/icone/fleche_retour.png') }}" alt="fleche retour"></button></a>


		{{ include('admin/partners/_delete_form.html.twig') }}
	</div>
</div>
{% endblock %}