{% extends 'admin.html.twig' %}

{% block title %}Partenaires
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Partenaires</h1>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ partner.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ partner.partnerName }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ partner.partnerAddress }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ partner.partnerCity }}</td>
				</tr>
				<tr>
					<th>Mail</th>
					<td>{{ partner.partnerMail }}</td>
				</tr>
				<tr>
					<th>Téléphone</th>
					<td>{{ partner.partnerPhone }}</td>
				</tr>
				<tr>
					<th>Présentation</th>
					<td>{{ partner.partnerContent|raw }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td><img
					src="{{ asset('/uploads/'~partner.partnerpicture) }}" alt="" width="150"></td>
				</tr>
				<tr>
					<th>Adresse du site</th>
					<td>{{ partner.partnerWebLink }}</td>
				</tr>
				<tr>
					<th>Référent</th>
					<td>{{ partner.partnerReferent }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_partners_index') }}">Revenir à la liste</a>

		<a href="{{ path('admin_partners_edit', {'id': partner.id}) }}">Modifier</a>

		{{ include('admin/partners/_delete_form.html.twig') }}
	</div>

{% endblock %}
