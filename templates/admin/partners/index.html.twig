{% extends 'admin.html.twig' %}

{% block title %}Partners index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Partenaires</h1>

		<a href="{{ path('admin_partners_new') }}">Créer un partenaire</a>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Adresse</th>
					<th>Ville</th>
					<th>Mail</th>
					<th>Téléphone</th>
					<th>Présentation</th>
					<th>Photo</th>
					<th>Adresse du site</th>
					<th>Référent</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for partner in partners %}
					<tr>
						<td>{{ partner.id }}</td>
						<td>{{ partner.partnerName }}</td>
						<td>{{ partner.partnerAddress }}</td>
						<td>{{ partner.partnerCity }}</td>
						<td>{{ partner.partnerMail }}</td>
						<td>{{ partner.partnerPhone }}</td>
						<td>{{ partner.partnerContent }}</td>
						<td>{{ partner.partnerPicture }}</td>
						<td>{{ partner.partnerWebLink }}</td>
						<td>{{ partner.partnerReferent }}</td>
						<td>
							<a href="{{ path('admin_partners_show', {'id': partner.id}) }}">Voir</a>
							<a href="{{ path('admin_partners_edit', {'id': partner.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
