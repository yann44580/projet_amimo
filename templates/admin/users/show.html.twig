{% extends 'admin.html.twig' %}

{% block title %}Users
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Adhérent</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom de Famille</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Anniversaire</th>
					<td>{{ user.birthdayDate ? user.birthdayDate|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.address }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ user.city }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td>{{ user.picture }}</td>
				</tr>
				<tr>
					<th>Presentation</th>
					<td>{{ user.presentation }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_users_index') }}">Revenir à la liste</a>

		<a href="{{ path('admin_users_edit', {'id': user.id}) }}">Modifier</a>

		{{ include('admin/users/_delete_form.html.twig') }}
	</div>
{% endblock %}
