{% extends 'admin.html.twig' %}

{% block title %}Users
{% endblock %}

{% block body %}
<div class="administration">
	<fieldset class="container">
		<h1>Adhérent</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom de Famille</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Anniversaire</th>
					<td>{{ user.birthdayDate ? user.birthdayDate|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.address }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ user.city }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td><img src="{{ asset('/uploads/users/'~user.picture) }}" alt="" width="150"></td>
				</tr>
				<tr>
					<th>Presentation</th>
						<td>
							{{ user.presentation|raw }}
						</td>
				</tr>
			</tbody>
		</table>
		<div class="confirm_select">
		<a href="{{ path('admin_users_index') }}"><p>Retour à la liste</p><button class="btn blue-grey return"><img src="{{ asset('/uploads/icone/fleche_retour.png') }}" alt="fleche retour"></button></a>


		{{ include('admin/users/_delete_form.html.twig') }}
		</fieldset>
</div>
{% endblock %}
