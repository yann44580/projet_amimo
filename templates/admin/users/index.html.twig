{% extends 'admin.html.twig' %}

{% block title %}Users index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Les adhérents</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Nom de famille</th>
					<th>Prénom</th>
					<th>Anniversaire</th>
					<th>Adresse</th>
					<th>Ville</th>
					<th>Photo</th>
					<th>Presentation</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.birthdayDate ? user.birthdayDate|date('Y-m-d') : '' }}</td>
						<td>{{ user.address }}</td>
						<td>{{ user.city }}</td>
						{# <td>{{ user.picture }}</td> #}
						<td>
							<img src="{{ asset('/uploads/users/'~user.picture) }}" alt="" width="150">
						</td>
						<td>
							{{ user.presentation|length > 100 ? user.presentation|slice(0,100)|raw : user.presentation|raw }}
							{{ user.presentation|length > 100 ? '...' : '' }}
						</td>
						<td class="confirm">
							{# <a href="{{ path('admin_users_show', {'id': user.id}) }}">Voir</a> #}
							<a href="{{ path('admin_users_edit', {'id': user.id}) }}"><button class="btn teal lighten-1"><i class="fas fa-edit"></i></button</a>
							{{ include('admin/users/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="12">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
