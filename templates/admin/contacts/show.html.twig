{% extends 'admin.html.twig' %}

{% block title %}Contacts
{% endblock %}

{% block body %}
<div class="administration">
	<fieldset class="container">
		<h1>Contacts</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ contact.id }}</td>
				</tr>
				<tr>
					<th>Contact_fullname</th>
					<td>{{ contact.contactFullname }}</td>
				</tr>
				<tr>
					<th>Contact_firstname</th>
					<td>{{ contact.contactFirstname }}</td>
				</tr>
				<tr>
					<th>Contact_email</th>
					<td>{{ contact.contactEmail }}</td>
				</tr>
				<tr>
					<th>Contact_subject</th>
					<td>{{ contact.contactSubject }}</td>
				</tr>
				<tr>
					<th>Contact_content</th>
					<td>{{ contact.contactContent }}</td>
				</tr>
				<tr>
					<th>Contact_date</th>
					<td>{{ contact.contactDate ? contact.contactDate|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="confirm_select">
		<a href="{{ path('admin_contacts_index') }}"><p>Retour Ã  la liste</p><div class="btn blue-grey return"><img src="{{ asset('/uploads/icone/fleche_retour.png') }}" alt="fleche retour"></div></a>

		{{ include('admin/contacts/_delete_form.html.twig') }}
		</div>
	</fieldset>	
</div>
{% endblock %}
