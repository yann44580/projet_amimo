{% extends 'admin.html.twig' %}

{% block title %}Animals
{% endblock %}

{% block body %}
<div class="administration">
	<fieldset class="container">
		<h1>Nos animaux</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Nom</th>
					<td>{{ animal.animalName }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td><img src="{{asset ('/uploads/animals/' ~ animal.animalpicture)}}" alt="chien_bambou" width="120px"></td>
				</tr>
				<tr>
					<th>Présentation</th>
					<td>{{ animal.animalContent|raw }}</td>
				</tr>
			</tbody>
		</table>
		<div class="confirm_select">
		<a href="{{ path('admin_animals_index') }}"><p>Retour à la liste</p><button class="btn blue-grey return"><img src="{{ asset('/uploads/icone/fleche_retour.png') }}" alt="fleche retour"></button></a>


		{{ include('admin/animals/_delete_form.html.twig') }}
		</div>
	</fieldset>
</div>
{% endblock %}
