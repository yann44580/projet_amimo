{{ form_start(form) }}
<div class="input-field">
	{{ form_label(form.association_name) }}
	{{ form_widget(form.association_name) }}
</div>
<div class="input-field">
	{{ form_label(form.association_address) }}
	{{ form_widget(form.association_address) }}
</div>
<div class="input-field">
	{{ form_label(form.association_city) }}
	{{ form_widget(form.association_city) }}
</div>
<div class="input-field">
	{{ form_label(form.association_mail) }}
	{{ form_widget(form.association_mail) }}
</div>
<div class="input-field">
	{{ form_label(form.association_phone) }}
	{{ form_widget(form.association_phone) }}
</div>
<div class="input-field">
	{{ form_row(form.association_content) }}
</div>
{# Si la route est "annonces_edit on affiche les images #}
{% if app.request.attributes.get('_route') == 'admin_associations_edit' %}
	<h2>Images</h2>
	{% for image in association.picturesAssociations %}
		<div>
			<img
			src="{{ asset('/uploads/'~image.pictureassociationname) }}" alt="" width="150">

			{# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
			<a href="{{ path('admin_associations_delete_image', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
		</div>
	{% endfor %}
{% endif %}
<button class="btn">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
