{% extends 'base.html.twig' %}

{% block title %}Associations index{% endblock %}

{% block body %}
    <h1>Associations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Association_name</th>
                <th>Association_address</th>
                <th>Association_city</th>
                <th>Association_mail</th>
                <th>Association_phone</th>
                <th>Association_content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.associationName }}</td>
                <td>{{ association.associationAddress }}</td>
                <td>{{ association.associationCity }}</td>
                <td>{{ association.associationMail }}</td>
                <td>{{ association.associationPhone }}</td>
                <td>{{ association.associationContent }}</td>
                <td>
                    <a href="{{ path('admin_associations_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('admin_associations_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_associations_new') }}">Create new</a>
{% endblock %}
