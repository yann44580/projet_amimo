{% extends 'base1.html.twig' %}

{% block title %}Fiche de séance
{% endblock %}

{% block body %}
<main>
	<div class="tool">
		<div class="container">
			<div class="title">
				<h1>Mes fiches de session</h1>
				<div class="title1">
					<a href="{{ path('member_tools_session_new') }}"><button class="btn blue lighten-1">Nouvelle
							fiche</button></a>
				</div>
			</div>
			{% set nothing = true %}
			<div class="row card_theme">
				{% for tool in tools %}
				{% if tool.toolitem == 'session' %}
				{% set nothing = false %}
				<div class="col l3">
					<div class="card">
						<div class="card-image waves-effect waves-block waves-light">

							{% for image in tool.picturesTools %}
							<img src="{{ asset('/uploads/'~image.picturetoolname) }}" alt="" width="50">
							{% else %}
							<img src="{{asset('uploads/patte_chien.jpg')}}" alt="" width="50px" height="100%">
							{% endfor %}
						</div>
						<div class="card-content">
							<span class="card-title activator grey-text text-darken-4">{{ tool.toolTitle }}<i
								class="material-icons right">more_vert</i></span>
							<p>Type de fiche:
								{{ tool.categorytool.toolcategoryname }}
							</p>
						</div>
						<div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">{{ tool.toolTitle }}<i
                                    class="material-icons right">close</i></span>
                            <p>Mon ou mes partenaires:
								{% set affich = null %}
                                {% for animals in tool.animalcategory %}
								{% if affich is null %}
                                	{% set affich = animals.animalcategoryname %}  
								{% else %}
									{% set affich = affich ~ " / " ~ animals.animalcategoryname %}
								{% endif %}
								{% endfor %}
							<p>{{ affich }}</p>
                            </p>
                            <p>Public visé:
								{% set affich = null %}
                                {% for publictype in tool.populationtype %}
								{% if affich is null %}
									{% set affich = publictype.populationtypename %}
								{% else %}
									{% set affich = affich ~ " / " ~ publictype.populationtypename %}
								{% endif %}
								{% endfor %}
                            <p>{{ affich }}</p>
                            </p>
                        </div>
						<div class="card-action">
							<a href="{{ path('member_tools_session_show', {'id': tool.id}) }}">
								<p>Voir la fiche</p>
							</a>
						</div>
					</div>
				</div>
				{% endif %}

				{% endfor %}
			</div>
			{% if nothing == true %}
			<div>
				<h4>Pas encore de fiches
				</h4>
			</div>
			{% endif %}


		</div>
	</div>
</main>
{% endblock %}