{% extends 'base1.html.twig' %}

{% block title %}Fiche de séance
{% endblock %}

{% block body %}
	<main>
		<div class="tool">
			<div class="container">
				<div class="title">
				<h1>Mes fiches de session</h1>
					<div class="title1">
						<a href="{{ path('member_tools_session_new') }}"><button class="btn blue lighten-1">Nouvelle fiche</button></a>
					</div>	
				</div>
				{% set nothing = true %}
				<div class="row">
					{% for tool in tools %}
						{% if tool.toolitem == 'session' %}
							{% set nothing = false %}

							<div class="card col l3">
								<div class="card-image waves-effect waves-block waves-light">

									{% for image in tool.picturesTools %}
										<img src="{{ asset('/uploads/'~image.picturetoolname) }}" alt="" width="50">
									{% else %}
										<img src="{{asset('uploads/patte_chien.jpg')}}" alt="" width="50px" height="100%">
									{% endfor %}
								</div>
								<div class="card-content">
									<span class="card-title activator grey-text text-darken-4">{{ tool.toolTitle }}</span>
									<p>Type de fiche:
										{{ tool.categorytool.toolcategoryname }}
									</p>
									<p>Public visé:
										{% for publictype in tool.populationtype %}
											{{ publictype.populationtypename }}
											-
										{% endfor %}
									</p>
								</div>
								<div class="card-action">
									<a href="{{ path('member_tools_session_show', {'id': tool.id}) }}">
										<p>Voir la fiche</p>
									</a>
								</div>
							</div>
						{% endif %}

					{% endfor %}
				</div>
				{% if nothing == true %}
					<div>
						<h4>Pas encore de fiches
						</h4>
					</div>
				{% endif %}


			</div>
		</div>
	</main>
{% endblock %}
