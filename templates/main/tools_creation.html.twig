{% extends 'base1.html.twig' %}

{% block title %}Fiche séance{% endblock %}

{% block body %}
<main>
    <div class="tool">
        <div class="container">
            <h1>Fiche séance</h1>
            {% for tool in tools %}
            <fielset>
                <h2>{{ tool.toolTitle }}</h2>
                <div class="divider"></div>
                <div class="row">
                    <div class="col s3">
                        <h5>Public ciblé:</h5>
                    </div>
                    <div class="col s3">
                        {% for publictype in tool.populationtype %}
                        {{ publictype.populationtypename }} -
                        {% endfor %}
                    </div>
                </div>
                <div class="divider"></div>
                <h5>Document pdf ou photo présentant la création</h5>
                <div class="row">
                    <div class="col s12">
                        <a href="{{ asset('/uploads/tools/'~tool.documenttool) }}" target="_blank">lien pour visualiser pdf</a>
                        <!-- <src="http://docs.google.com/gview?url={{ asset('/uploads/tools/'~tool.documenttool) }}" embedded=true>Voir le pdf</a> -->
                        <!-- <embed src="{{ asset('/uploads/tools/'~tool.documenttool) }}" alt="" width="300" height="260" type="application/pdf"> -->
                        <img src="{{ asset('uploads/tools/' ~ tool.documenttool) }}" alt="" width="80">
                    </div>
                    <div class="col s12">
                        <h5>Objectif possible de séance</h5>
                        {{ tool.toolcontent4|raw }}
                    </div>
                    <div class="col s12">
                        <h5>Métériel nécessaire pour la réalisation</h5>
                        {{ tool.toolcontent|raw }}
                    </div>
                    <div class="col s12">
                        <h5>Tuto étape par étapes</h5>
                        {{ tool.toolcontent5|raw }}
                    </div>
                </div>
                <div class="col s12">
    
                    {% for image in tool.picturesTools %}
                    <img src="{{ asset('/uploads/tools/'~image.picturetoolname) }}" alt="" width="150">
                    {% endfor %}
                </div>
                <div class="divider"></div>
                <div class="row">
                    <div class="col s4">
                        <h6>Auteur</h6>
                        {{ tool.toolAuthor }}
                    </div>
                    <div class="col s4">
                        <h6>Date de publication</h6>
                        {{ tool.toolPublicationDate|date('Y-m-d') }}
                    </div>

                    <div class="col s4"><a href="{{ path('tools_creation_data', {'id': tool.id }) }}">
                            <div class="btn green lighten-3">Télécharger le doc</div>
                        </a></div>
                </div>


            </fielset>
            {% endfor %}
        </div>

        <div class="confirm1">
            <a href="{{ path('home') }}">
                <div class="btn blue-grey return"><img src="{{ asset('/uploads/icone/fleche_retour.png') }}"
                        alt="fleche retour"></div>
            </a>
        </div>

    </div>
</main>
{% endblock %}