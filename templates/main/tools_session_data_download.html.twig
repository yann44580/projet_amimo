{% extends 'base-pdf.html.twig' %}

{% block title %}La fiche séance{% endblock %}

{% block body %}
<fielset>
    <h2>{{ tools.toolTitle }}</h2>
    <div class="divider"></div>
    <div class="row">
        <div class="col s4">
            <h5>Mon ou mes partenaire(s):</h5>
        </div>
        <div class="input-field col s4">
            {% for animals in tools.animalcategory %}
            {{ animals.animalcategoryname }}
            -
            {% endfor %}
        </div>
    </div>
    <div class="divider"></div>
    <div class="row">
        <div class="col s3">
            <h5>Type de séance:</h5>
        </div>
        <div class=" col s4">
            {{ tools.categorytool.toolcategoryname }}
        </div>
        <div class="col s4">
            {{ tools.sizegroup }}
        </div>
    </div>
    <div class="divider"></div>
    <div class="row">
        <div class="col s3">
            <h5>Public ciblé:</h5>
        </div>
        <div class="col s3">
            {% for publictype in tools.populationtype %}
            {{ publictype.populationtypename }} -
            {% endfor %}
        </div>
        <div class="col s5">
            {% for public in tools.populations %}
            {{ public.populationname }} -
            {% endfor %}
        </div>
    </div>
    <div class="divider"></div>
    <h5>Déroulé de la séance</h5>
    <div class="row">
        <div class="col s12">
            <h5>1er contact</h5>
            {{ tools.toolcontent|raw }}
        </div>
        <div class="col s12">
            <h5>Plein contact</h5>
            {{ tools.toolcontent2|raw }}
        </div>
        <div class="col s12">
            <h5>Séparation</h5>
            {{ tools.toolcontent3|raw }}
        </div>
    </div>
    <div class="col s12">
        {% for image in tools.picturesTools %}

        <img src="{{url}}/uploads/tools/{{image.picturetoolname}}" alt="" width="150">
        {% endfor %}
    </div>
    <div class="divider"></div>
    <div class="row">
        <div class="col s4">
            <h6>Auteur</h6>
            {{ tools.toolAuthor }}
        </div>
        <div class="col s4">
            <h6>Date de publication</h6>
            {{ tools.toolPublicationDate|date('Y-m-d') }}
        </div>


</fielset>
{% endblock %}