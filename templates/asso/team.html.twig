{% extends 'base1.html.twig' %}

{% block title %}L'équipe
{% endblock %}

{% block body %}

<div class="asso">
	<div class="container">
		<h2>L'équipe</h2>
			{% for user in users %}
				{% if user.roles["0"] == "ROLE_ADMIN" %}
			<div class="row">
			<div class="col s6 offset-s3">	
				<ul class="team collapsible">
				<li>
				  <div class="humans collapsible-header">
					<div class="card1">
					<i class="material-icons">filter_drama</i><img src="{{ asset('/uploads/users/'~ user.picture) }}" alt="" width="150">
					</div>
					<div class="card2">
						<p>{{user.firstname}}</p>
						<p>{{user.lastname}}</p>
							<span>En savoir plus</span>
					</div>	
				</div>
				  <div class="collapsible-body"><span><p>{{user.presentation|raw}}</p></span></div>
				</li>
				</ul>
				</div>
			</div>
				{% else %}
			
				{% endif %}
			{% endfor %}
	</div>
	<div class="container team_animals">
	<h2>Les animaux</h2>
		{% for animal in animals %}
		<div class="row">
			<div class="col s6 offset-s3">
				<ul class="team collapsible">
				<li>
				  <div class="humans collapsible-header">
					<div class="card1">	
					<i class="material-icons">filter_drama</i><img src="{{ asset('/uploads/animals/'~ animal.animalpicture) }}" alt="" width="150"></div>
					<div class="card2">
					<p>{{animal.animalname}}</p>
						<span>En savoir plus</span>
					</div>	
				</div>

				<div class="collapsible-body"><span><p>{{animal.animalcontent|raw}}</p></span></div>
				</li>
				</ul>
			</div>
		</div>
		{% endfor %}
	</div>

</div>

{% endblock %}

          